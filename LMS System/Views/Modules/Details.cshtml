                    </div>
                }
            }
            @foreach (var activity in Model.Activities)
            {
                @*<div>@activity.Name</div>*@
                @Html.ActionLink(activity.Name,"Index","Activities", new { id = Model.Id }, null)<br />

            }
            @*@Html.ActionLink("Add activity", "Create", "Activities",
